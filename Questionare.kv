MDScreen:
    name: "questionare"

    ScrollView:
        scroll_y: 1  # Start from the top
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(50)
            spacing: dp(50)
            size_hint_y: None
            height: self.minimum_height
            
            MDLabel:
                text: "[u]User Finance Page[/u]"
                font_name: "Roboto"
                font_size: "23sp"
                pos_hint: {"center_x": .4, "center_y": .5}
                color: [0, 0, 0.23, 1]  # Adjusted color format
                markup: True 
            
            MDLabel:
                text: 'Credit Information'
                halign: 'center'
                font_style: 'H5'
                color: [0.53, 0.53, 0.76, 1]
            
            MDTextField:
                id: cardname
                hint_text: "Credit Card Name"
                helper_text: "Enter the name as stated in your credit card"
                helper_text_mode: "on_focus"
            
            MDTextField:
                id: cardnumber
                hint_text: "Credit Card Number"
                helper_text: "Enter your 16 digit credit card number here"
                helper_text_mode: "on_focus"
            
            MDTextField:
                id: expirationdate
                hint_text: "Credit Card Expiration Date"
                helper_text: "Enter in mm/yyyy formating"
                helper_text_mode: "on_focus"
            
            MDTextField:
                id: ficoscore
                hint_text: "Fico Credit Score"
                helper_text: "Enter your FICO credit score from 300 - 850"
                helper_text_mode: "on_focus"
           
            MDLabel:
                text: 'Personal Finance Information'
                halign: 'center'
                font_style: 'H5'
                color: [0.53, 0.53, 0.76, 1]
            
            MDTextField:
                id: income
                hint_text: "Monthly Income"
                helper_text: "Enter your monthly income before bills/expenses"
                helper_text_mode: "on_focus"
            
            MDTextField:
                id: rent
                hint_text: "Rent"
                helper_text: "Enter your total rent cost"
                helper_text_mode: "on_focus"
            
            MDTextField:
                id: groceries
                hint_text: "Groceries"
                helper_text: "Enter the cost of groceries you spend per month"
                helper_text_mode: "on_focus"
            
            MDTextField:
                id: insurance
                hint_text: "Insurance"
                helper_text: "Enter the cost of insurance this month"
                helper_text_mode: "on_focus"
            
            MDTextField:
                id: bills
                hint_text: "Monthly Bills"
                helper_text: "Enter your total living expenses like water, electricity, gas, etc."
                helper_text_mode: "on_focus"

            MDTextField:
                id: loans
                hint_text: "Monthly Loan Payments"
                helper_text: "Enter the ammount of money you contribute to loan repayments"
                helper_text_mode: "on_focus"

            MDTextField:
                id: entertainment
                hint_text: "Entertainment Expenses"
                helper_text: "Entertainmemt subscriptions, concert budget, restaurant expenses, etc."
                helper_text_mode: "on_focus"

            MDTextField:
                id: misc
                hint_text: "MISC"
                helper_text: "Enter the toal cost of all misc things i.e OTC medication"
                helper_text_mode: "on_focus"

            MDTextField:
                id: savings
                hint_text: "Total Savings"
                helper_text: "Enter your total savings,checkings"
                helper_text_mode: "on_focus"

            MDLabel:
                text: 'Past Transaction History'
                halign: 'center'
                font_style: 'H5'
                color: [0.53, 0.53, 0.76, 1]
            
            MDLabel:
                text: "Transaction 1"
                font_name: "Roboto"
                font_size: "23sp"
                halign: 'center'
                color: [0, 0, 0.23, 1]  # Adjusted color format
            
            MDTextField:
                id: tranaction1date
                hint_text: "Enter the date the first transaction was processed"
                helper_text: "Date format in MM/DD/YYYY"
                helper_text_mode: "on_focus"
            
            MDTextField:
                id: transaction1name
                hint_text: "Enter the name of the first transaction"
                helper_text: "example: amazon, target etc,. "
                helper_text_mode: "on_focus"
            
            MDTextField:
                id: transaction1ammount
                hint_text: "Enter the ammount of the first transaction"
                helper_text: "How much did the first transaction cost you"
                helper_text_mode: "on_focus"
            
            MDLabel:
                text: "Transaction 2"
                font_name: "Roboto"
                font_size: "23sp"
                halign: 'center'
                color: [0, 0, 0.23, 1]  # Adjusted color format
            
            MDTextField:
