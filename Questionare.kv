            MDRaisedButton:
                text: "Submit"
                pos_hint: {'center_x': 0.5}
                on_release: app.submit_data()

            MDProgressBar:
                id: progress_bar
                value: 0
                max: 100
                size_hint_y: None
                height: dp(4)
                pos_hint: {'center_x': 0.5}
                opacity: 0
