<MD3Card>:
    pos_hint: {"x": 0.2, "y": 0.3}
    padding: 4
    size_hint: None, None
    size: "283dp", "190dp"
    md_bg_color: "#333E52"  # Background color for filled style

    MDRelativeLayout:
        Image:
            source: 'Personal-Finance-Tracker/Assets/UpArrow.png'  # Update with your image path
            allow_stretch: True
            keep_ratio: False
            size_hint: None, None
            size: "30dp", "30dp"  # Adjust size 
            pos_hint: {"center_x": .1, "center_y": .5}  # Center the image in the card
        
        
        MDLabel:
            text: 'Income'  # Add any additional text 
            adaptive_size: True
            color: "black"
            pos_hint: {"center_x": .24, "center_y": .47}
            font_size: "12sp"


        Image:
            source: 'Personal-Finance-Tracker/Assets/DownArrow.png'  # Update with your image path
            allow_stretch: True
            keep_ratio: False
            size_hint: None, None
            size: "30dp", "30dp"  # Adjust size 
            pos_hint: {"center_x": .6, "center_y": .5}  # Center the image in the card
        
        MDLabel:
            text: 'Expense'  # Add any additional text 
            adaptive_size: True
            color: "black"
            pos_hint: {"center_x": .75, "center_y": .47}
            font_size: "12sp"
        
        # Skeleton for income
        MDLabel:
            text: '$7,030.98' 
            adaptive_size: True
            color: "black"
            pos_hint: {"center_x": .3, "center_y": .55}
            font_size: "16sp"

        # Skeleton for expense
        MDLabel:
            text: '$3,030.98' 
            adaptive_size: True
            color: "black"
            pos_hint: {"center_x": .8, "center_y": .55}
            font_size: "16sp"
        
        # Skeleton for income
        MDLabel:
            text: '$15,030.98' 
            adaptive_size: True
            color: "black"
            pos_hint: {"center_x": .35, "center_y": .8}
            font_size: "30sp"
        

        MDIconButton:
            icon: "dots-vertical"
            pos_hint: {"top": 1, "right": 1}
            on_release: app.open_menu(self)  # Call open_menu with self as argument

        MDLabel:
            id: label
            text: root.text
            adaptive_size: True
            color: "grey"
            pos: "12dp", "12dp"
            bold: True

MDScreen:
    ScrollView:
        MDBoxLayout:
            id: box
            orientation: 'vertical'
            elevation: 4
            pos_hint: {"center_x": .5, "center_y": .9}
            adaptive_size: True
            spacing: "56dp"
            padding: "12dp"
            # Ensure the ScrollView expands to fill the screen height
            size_hint_y: None
            height: self.minimum_height

    


