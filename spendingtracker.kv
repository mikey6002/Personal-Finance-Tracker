<SpendingTracker>:
BoxLayout:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)
    canvas.before:
        Color:
            rgba: 0.761, 0.592, 0.812, 1  # Purple background color
        Rectangle:
            pos: self.pos
            size: self.size

    MDLabel:
        text: "Spending Tracker"
        halign: 'center'
        font_style: 'H4'
        bold: True
        size_hint_y: None
        height: dp(60)

    MDLabel:
        text: "Expenses"
        halign: 'center'
        font_style: 'H5'
        size_hint_y: None
        height: dp(40)

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(50)
        padding: dp(10)
        spacing: dp(10)
        pos_hint: {'center_x': 0.5}
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background color for the container
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [dp(10), dp(10), dp(10), dp(10)]

        MDRaisedButton:
            text: "1M"
            md_bg_color: (1, 1, 1, 1)  # Transparent background
            text_color: (0, 0, 0, 1)  # Text color
            size_hint: None, None
            elevation: 0


        MDRaisedButton:
            text: "6M"
            md_bg_color: (1, 1, 1, 1)  # Black
            text_color: (0, 0, 0, 1)  # Text color
            elevation: 0
            size_hint: None, None

        MDRaisedButton:
            text: "1Y"
            md_bg_color: (1, 1, 1, 1)  # Black
            text_color: (0, 0, 0, 1)  # Text color
            elevation: 0
            size_hint: None, None

        MDRaisedButton:
            text: "ALL TIME"
            md_bg_color: (1, 1, 1, 1)  # Black
            text_color: (0, 0, 0, 1)  # Text color
            elevation: 0
            size_hint: None, None
            text_size: self.size  # Allow text to wrap


    MDBoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size_hint_x: 0.95
        size: dp(300), dp(300)
        pos_hint: {'center_x': 0.5}
        radius: [dp(10), dp(10), dp(10), dp(10)]
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background color for the container
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [dp(10), dp(10), dp(10), dp(10)]

        MDBoxLayout:
            id: chart_box
            adaptive_height: True
            padding: dp(5)
            orientation: "vertical"
            size: dp(300), dp(300)

        MDLabel:
            text: "ALL TIME\nTOTAL EXPENSES\n$20,210,230.32"
            halign: 'center'
            font_style: 'H6'
            size_hint_y: None
            height: dp(100)
            padding: dp(10), dp(10)

    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        padding: dp(10)
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background color for the container
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [dp(10), dp(10), dp(10), dp(10)]

        MDLabel:
            text: "Top Spending Categories"
            halign: 'center'
            font_style: 'H5'
            size_hint_y: None
            height: dp(40)
            padding: dp(10), dp(10)

        ScrollView:
            size_hint_y: None
            height: dp(175)  # Adjust this height to fit your design

            MDList:
                id: category_list
