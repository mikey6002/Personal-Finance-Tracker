Screen: 
    
    MDCard:
        size_hint: None, None
        size: 600,600
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: opening_label
            text: "Transactions"
            font_size: 40
            halign: 'left'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        BoxLayout:
            size_hint_y: None
            height: self.minimum_height
            spacing: 10
            padding: 10, 0
            MDRaisedButton:
                id: dates
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                text: 'Pick Dates'
                on_release: app.dates_dropper()
                text_size: self.size
                padding_x: 10
                halign: 'left'
            
            Widget:
                size_hint_x: None
                width: dp(10)  # Space between the buttons
                
            MDRaisedButton:
                id: categories
                pos_hint: {'center_x': .5, 'center_y': 0.5}
                text: 'All Categories'
                on_release: app.categories_dropper()
                text_size: self.size
                halign: 'right'
                padding_x: 10 


        